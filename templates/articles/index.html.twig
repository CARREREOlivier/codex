            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr class="over:bg-amber-50 dark:hover:bg-amber-600 border-b">
                    <td class="px-6 py-4 text-right font-bold">{{ article.id }}</td>
                    <td class="px-6 py-4 font-medium text-gray-900">{{ article.title }}</td>
                    <td class="px-6 py-4 text-sm text-gray-700">{{ article.slug }}</td>
                    <td class="px-6 py-4 text-sm text-gray-700 truncate max-w-xs">{{ article.content }}</td>
                    <td class="px-6 py-4 text-sm text-gray-700">{{ article.createdAt ? article.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="px-6 py-4 text-sm text-gray-700">{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {{ article.status.value == 'publiÃ©'
                        ? 'bg-green-200 text-green-800'
                        : 'bg-yellow-200 text-yellow-800' }}">
                            {{ article.status.value|capitalize }}
                        </span>
                    </td>

                    <td class="px-6 py-4 text-right flex gap-2 justify-end">
                        <a href="{{ path('app_article_show', {'slug': article.slug}) }}"
                           class="text-blue-600 hover:text-blue-800" title="Voir">
                            <i class="fas fa-eye"></i>
                        </a>
                        &nbsp;&nbsp;
                        <a href="{{ path('app_article_edit', {'slug': article.slug}) }}"
                           class="text-yellow-600 hover:text-yellow-800" title="Modifier">
                            <i class="fas fa-pen-to-square"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="px-6 py-4 text-center text-gray-500">Aucun article trouvÃ©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}