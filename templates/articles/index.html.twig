{% extends 'base.html.twig' %}

{% block title %}Back office : Article index{% endblock %}

{% block body %}
     <div class="max-w-screen-lg mx-auto px-6 py-8 bg-[#fdf6e3] rounded-xl shadow">
        <h1 class="text-4xl font-serif text-center mb-4 text-gray-800">ðŸ“œ Article Index</h1>

        <div class="text-center mb-6">
