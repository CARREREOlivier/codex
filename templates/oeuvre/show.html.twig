            {% if articles is not empty %}
                <ul class="space-y-2">
                    {% for article in articles %}
                        <li class="bg-gray-100 p-4 rounded shadow">
                            <a href="{{ path('app_admin_article_show', {'id': article.id}) }}"
                               class="text-blue-600 hover:underline text-lg font-medium">
