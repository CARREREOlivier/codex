{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-[#fdf6e3] py-12">
        <div class="bg-white p-8 rounded-2xl shadow-lg w-2/3 max-w-md border border-yellow-100 text-center mx-auto">
        <h1 class="text-4xl font-bold font-serif text-gray-800 mb-8">üîê Connexion</h1>

            {% if error %}
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-6">
                <div>
                    <label for="inputPseudo" class="block mb-1 text-sm font-medium text-gray-700 text-left">Pseudo</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="inputPseudo"
                           class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                           autocomplete="username" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block mb-1 text-sm font-medium text-gray-700 text-left">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword"
                           class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                           autocomplete="current-password" required>
                </div>

                <div class="flex items-center justify-between text-left">
                    <div class="flex items-center">
                        <input type="checkbox" id="rememberMe" name="_remember_me" class="mr-2">
                        <label for="rememberMe" class="text-gray-700 text-sm">Rester connect√©</label>
                    </div>
                    <a href="{{ path('app_register') }}" class="text-accent underline text-sm hover:text-accent-dark">
                        Pas encore inscrit ?
                    </a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="pt-4">
                    <button class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium px-6 py-3 rounded-full shadow-lg transition text-lg"
                            type="submit">
                        ‚úÖ Se connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}