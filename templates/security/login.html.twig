{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen grid grid-cols-3 bg-[#fdf6e3] pt-[8vh]">
        <div></div>

        <div class="bg-white p-8 rounded-2xl shadow-lg w-[90%] mx-auto border border-yellow-100">
            <h1 class="text-3xl font-serif text-center text-gray-800 mb-6">Connexion Ã  l'espace d'administration</h1>

            {% if error %}
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-4">
                <div>
                    <label for="inputEmail" class="block mb-1 text-sm font-medium text-gray-700">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail"
                           class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                           autocomplete="email" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block mb-1 text-sm font-medium text-gray-700">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword"
                           class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                           autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="text-center pt-4">
                    <button class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium px-6 py-2 rounded shadow"
                            type="submit">Se connecter</button>
                </div>
            </form>
        </div>

        <div></div>
    </div>
{% endblock %}
