<form method="post"
      action="{{ path('app_oeuvre_delete', { 'slug': oeuvre.slug }) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette œuvre ?');"
      class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oeuvre.id) }}">

    <button type="submit"
            class="{{ compact ? 'bg-red-600 hover:bg-red-800 text-white px-3 py-1 rounded text-sm' : 'flex items-center bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded shadow text-sm' }}">
        🗑️{% if not compact %} Supprimer{% endif %}
    </button>
</form>