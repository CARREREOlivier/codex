<div class="bg-[#fdf6e3] p-4 rounded shadow flex flex-col space-y-2">
    <div class="flex justify-between items-center">
        <a href="{{ path('app_article_show', {
            slugOeuvre: article.oeuvre.slug,
            slug: article.slug
        }) }}"
           class="text-blue-600 hover:underline text-lg font-medium">
            {{ article.title }}
        </a>
        {% if app.user and ('ROLE_ADMIN' in app.user.roles or app.user == article.author) %}
            <span class="text-xs px-2 py-1 rounded-full
                         {{ article.status == 'published' ? 'bg-green-200 text-green-800' : 'bg-yellow-200 text-yellow-800' }}">
                {{ article.status == 'published' ? 'Publié' : 'Brouillon' }}
            </span>
        {% endif %}
    </div>
    <div class="text-gray-700 text-sm flex justify-between">
        <span>Créé le {{ article.createdAt|date('d/m/Y') }}</span>
        <span>Modifié le {{ article.updatedAt|date('d/m/Y') }}</span>
    </div>
</div>